{
  "builders": [
    {
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
	  "post_shutdown_delay":"2m",
      "headless": false,
      "boot_wait": "1m",
      "boot_command": [ "{{user `product_key`}}<enter>" ],
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "a:/sysprep.bat",
      "guest_os_type": "Windows2012_64",
      "guest_additions_mode": "disable",
      "disk_size": 61440,
      "floppy_files": [
        "./answer_files/2012_core/Autounattend.xml",
        "./floppy/WindowsPowershell.lnk",
        "./floppy/PinTo10.exe",
        "./scripts/disable-winrm.ps1",
        "./scripts/docker/enable-winrm.ps1",
        "./scripts/oracle-cert.cer",
		"./scripts/winrm.ps1",
		"./scripts/Test-Command.ps1",
		"./scripts/finale.cmd",
		"./scripts/install_tools.ps1",
		"./scripts/postunattend.xml",
		"./scripts/sysprep.bat",
		"./scripts/win-updates.ps1",
		"./scripts/install_ps_modules.ps1",
		"./scripts/dotNet_compile.cmd",
		"./scripts/stop_dotNet_compilation.cmd",
		"./scripts/stop_dotNet_compilation.ps1"
      ],
      "vboxmanage": [
	[ "modifyvm", "{{.Name}}", "--natpf1", "guest_winrm,tcp,,55985,,5985" ],
	[ "modifyvm", "{{.Name}}", "--memory", "8192" ],
        [ "modifyvm", "{{.Name}}", "--vram", "128" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "4" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
	    "./scripts/enable-rdp.bat"
	  ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
	    "./scripts/stop_dotNet_compilation.cmd",
        "./scripts/pin-powershell.bat",
        "./scripts/uac-enable.bat"
      ]
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat"
	  ]
    },
	{
      "type": "powershell",
	  "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
	    "./scripts/stop_dotNet_compilation.ps1",
		"./scripts/install_powershell5.ps1"
	 ],
	"valid_exit_codes": [ 0, 3010 ]
    },
	 {
      "type": "windows-restart",
	  "restart_timeout":"1h"
    },
	{
      "type": "powershell",
	  "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
	    "./scripts/stop_dotNet_compilation.ps1",
		"./scripts/install_vbox_guest_additions.ps1",
		"./scripts/install_tools.ps1"
	 ]
    },
    {
      "type": "windows-restart",
	  "restart_timeout":"1h"
    },
	{
      "type": "powershell",
	  "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
	    "./scripts/stop_dotNet_compilation.ps1",
		"./scripts/install_ps_modules.ps1",
		"./scripts/win-updates.ps1"
	 ],
	 "valid_exit_codes": [ 0, 259, 1115 ]
    },
    {
      "type": "windows-restart",
	  "restart_timeout":"1h"
    },
	{
      "type": "powershell",
	  "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
	    "./scripts/stop_dotNet_compilation.ps1",
		"./scripts/win-updates.ps1"
	 ]
    },
    {
      "type": "windows-restart",
	  "restart_timeout":"1h"
    },
	{
      "type": "windows-restart"
    },
    {
      "type": "windows-shell",
      "scripts": [
	    "./scripts/dotNet_compile.cmd",
        "./scripts/set-winrm-automatic.bat",
		"./scripts/uac-enable.bat",
		"./scripts/compact.bat",
		"./scripts/finale.cmd",
        "./scripts/uac-enable.bat"
	   ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2012_core_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2016.template"
    }
  ],
  "variables": {
	"iso_url": "iso/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
    "iso_checksum_type": "sha1",
    "iso_checksum": "849734F37346385DAC2C101E4AACBA4626BB141C",
    "autounattend": "./answer_files/2012_core/Autounattend.xml",
    "product_key": "<tab>",
	"guest_additions_mode": "attach"
  }
}
