{
  "builders": [
    {
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "post_shutdown_delay": "5m",
      "headless": false,
      "boot_wait": "5m",
      "boot_command": ["{{user `product_key`}}<enter>"],
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "a:/sysprep.bat",
      "guest_os_type": "Windows2016_64",
      "guest_additions_mode": "disable",
      "disk_size": 61440,
      "floppy_files": [
        "./answer_files/2019/Autounattend.xml",
        "./scripts/disable-winrm.ps1",
        "./scripts/docker/enable-winrm.ps1",
        "./scripts/oracle-cert.cer",
        "./scripts/winrm.ps1",
        "./scripts/Test-Command.ps1",
        "./scripts/finale.cmd",
        "./scripts/install_tools.ps1",
        "./scripts/win-updates.ps1",
        "./scripts/install_ps_modules.ps1",
        "./scripts/dotNet_compile.cmd",
        "./scripts/stop_dotNet_compilation.cmd",
        "./scripts/postunattend.xml",
        "./scripts/sysprep.bat",
        "./scripts/disable_windows_update.cmd",
        "./scripts/adjust_visuals.reg",
        "./scripts/Run_antivirus.ps1",
        "./scripts/Configure-antivirus.ps1",
        "./scripts/stop_dotNet_compilation.ps1"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--natpf1", "guest_winrm,tcp,,55985,,5985"],
        ["modifyvm", "{{.Name}}", "--memory", "8192"],
        ["modifyvm", "{{.Name}}", "--vram", "128"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--cpuexecutioncap", "95"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/stop_dotNet_compilation.cmd",
        "./scripts/enable-rdp.bat",
        "./scripts/uac-enable.bat"
      ]
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat"
      ]
    },

    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
        "./scripts/stop_dotNet_compilation.ps1",
        "./scripts/install_vbox_guest_additions.ps1",
        "./scripts/install_tools.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
        "./scripts/stop_dotNet_compilation.ps1",
        "./scripts/install_ps_modules.ps1",
        "./scripts/win-updates.ps1"
      ],
      "valid_exit_codes": [0, 259, 1115]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
        "./scripts/stop_dotNet_compilation.ps1",
        "./scripts/win-updates.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
        "./scripts/stop_dotNet_compilation.ps1",
        "./scripts/win-updates.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
        "./scripts/stop_dotNet_compilation.ps1",
        "./scripts/win-updates.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": ["./scripts/docker/Installers/Run-NGen.ps1"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat",
        "./scripts/disable_windows_update.cmd",
        "./scripts/compact.bat",
        "./scripts/finale.cmd"
      ]
    },
    {
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "scripts": [
        "./scripts/Run_antivirus.ps1",
        "./scripts/Configure-antivirus.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2019core_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2016.template"
    }
  ],
  "variables": {
    "iso_url": "iso/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "70FEC2CB1D6759108820130C2B5496DA",
    "autounattend": "./answer_files/2019_core/Autounattend.xml",
    "product_key": "<tab>",
    "guest_additions_mode": "attach"
  }
}
